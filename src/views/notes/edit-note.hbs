<div class="col-md-5 mx-auto p-4">
	<div class="card">
		<div class="card-body">
			<h3>Edit Note</h3>
		</div>
		<div class="card-body">
			<form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
        		<input type="hidden" name="_method" value="PUT">
				<div class="form-group">
					<input type="text" class="form-control" name="title" placeholder="Title" value="{{note.title}}">
				</div>
				<div class="form-group">
					<textarea name="description" class="form-control">{{note.description}}</textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block" type="submit">
						Save
					</button>
				</div>
			</form>

		</div>
	</div>
</div>